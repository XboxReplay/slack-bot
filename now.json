{
    "name": "slack-bot",
    "public": false,
    "version": 2,
    "env": {
        "XBL_EMAIL": "@xbl-email",
        "XBL_PASSWORD": "@xbl-password",
        "SLACK_CLIENT_ID": "@slack-client-id",
        "SLACK_CLIENT_SECRET": "@slack-client-secret"
    },
    "builds": [
        {
            "src": "index.js",
            "use": "@now/node"
        },
        {
            "src": "*.html",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.js"
        }
    ]
}
