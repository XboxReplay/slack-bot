{
    "name": "@xboxreplay/slack-bot",
    "description": "Share your latest gameclip and screenshot on Slack with a single command.",
    "version": "0.1.0",
    "keywords": [
        "xboxreplay",
        "slack",
        "bot"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/XboxReplay/slack-bot"
    },
    "license": "MIT",
    "types": "./index.d.ts",
    "author": {
        "name": "Alexis Bize",
        "email": "alexis.bize@gmail.com"
    },
    "scripts": {
        "build": "npm run clean && ./node_modules/.bin/tsc",
        "clean": "rm -rf ./dist",
        "serve": "HOST=${HOST} PORT=${PORT} XBL_EMAIL=${XBL_EMAIL} XBL_PASSWORD=${XBL_PASSWORD} SLACK_SLACK_CLIENT_ID=${SLACK_SLACK_CLIENT_ID} SLACK_CLIENT_SECRET=${SLACK_CLIENT_SECRET} node ./index.js",
        "start": "npm run build && npm run serve",
        "now-build": "npm run build",
        "test": "echo \"No tests specified\""
    },
    "dependencies": {
        "@xboxreplay/xboxlive-api": "^2.3.1",
        "@xboxreplay/xboxlive-auth": "^2.2.0",
        "@xboxreplay/express-ugc-proxy": "^0.4.3",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "request": "^2.88.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/express": "^4.17.0",
        "@types/node": "^12.0.10",
        "@types/request": "^2.48.2",
        "typescript": "^3.5.2"
    }
}
